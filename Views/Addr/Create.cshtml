@model Addr


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Address</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Building">Building Name</label>
                <input type="text" class="form-control mb-3" asp-for="Building" placeholder="Enter Building Name">
                <span asp-validation-for="Building" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Level">Level</label>
                <input type="text" class="form-control mb-3" asp-for="Level" placeholder="Enter DesiLevelgnation">
                <span asp-validation-for="Level" class=" alert-danger"></span>
            </div>
        </div>

          <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Room">Room</label>
                <input type="text" class="form-control mb-3" asp-for="Room" placeholder="Enter Room Number">
                <span asp-validation-for="Room" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Carpark">Carpark</label>
                <input type="text" class="form-control mb-3" asp-for="Carpark" placeholder="Enter Carpark">
                <span asp-validation-for="Carpark" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Lobby">Lobby</label>
                <input type="text" class="form-control mb-3" asp-for="Lobby" placeholder="Enter Lobby">
                <span asp-validation-for="Lobby" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="Pantry">Pantry</label>
                 <input type="text" class="form-control mb-3" asp-for="Pantry" placeholder="Enter Pantry">
                <span asp-validation-for="Pantry" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Type">Type</label>
                <input type="text" class="form-control mb-3" asp-for="Type" placeholder="Enter Type">
                <span asp-validation-for="Type" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Addr" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
